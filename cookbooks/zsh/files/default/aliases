alias spec='spec --drb --color'

## elixir stuff
alias repry='fc -e - mix\ test=iex\ -S\ mix\ test\ --trace mix\ test' # re-run last `mix test` with iex and trace

# longor passwerds
alias pwgen='/usr/local/bin/pwgen -C -y --symbols --ambiguous 15'

# AWS
