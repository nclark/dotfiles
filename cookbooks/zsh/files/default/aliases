alias tpd='ssh deploy@thrownproject.com'
alias xget='ssh frontrow@appletv.local "cd Movies/new ; source ~/.profile ; get $1"'
alias localtunnel='/usr/local/bin/lt'

alias vi='nvim'

# needs sudo
