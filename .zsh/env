home_bin=$HOME/bin
local_bin=$HOME/.local/bin
asdf_bin=$HOME/.asdf/shims
current_bin=./bin
homebrew_bin=/opt/homebrew/bin
homebrew_sbin=/opt/homebrew/sbin
go_bin=$HOME/.asdf/installs/golang/1.19/packages/bin
cargo_bin=$HOME/.cargo/bin
rancher_bin=$HOME/.rd/bin
asdf_python_bin=$(asdf where python)/bin

export PATH=$current_bin:$home_bin:$asdf_bin:$rancher_bin:$homebrew_bin:$homebrew_sbin:$go_bin:$cargo_bin:$asdf_python_bin:$local_bin:$PATH

export EDITOR=/opt/homebrew/bin/nvim
export ERL_AFLAGS="-kernel shell_history enabled"
export HOMEBREW_NO_ENV_HINTS=true
export XDG_CONFIG_HOME=$HOME/.config
export CONF=$XDG_CONFIG_HOME
export TERM="xterm"
export AWS_CLI_AUTO_PROMPT=on
