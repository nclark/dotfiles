#!/bin/sh

# pause/unpause pihole

COMMAND=$1
SILENT=$2

. $(dirname "$0")/support/firewall-functions.sh

case $COMMAND in
  --pause)
    disable_pihole 30

    if ! [ $SILENT ]; then
      terminal-notifier -message "PiHole disabled for 30 seconds"
    fi
    ;;
  --unpause)
    enable_pihole

    if ! [ $SILENT ]; then
      terminal-notifier -message "PiHole enabled"
    fi
    ;;
  *)
    echo "usage: $0 [--pause|--unpause]"
    ;;
esac

