#!/bin/bash

declare -a TAPS=(
  felixkratz/formulae
  homebrew/cask-fonts
  xwmx/taps
  heroku/brew
  noahgorstein/tap
)

declare -a PACKAGES=(
  android-platform-tools
  amazon-ecs-cli
  asdf
  awscli
  b2-tools
  bash-completion
  bitwarden-cli
  choose-gui
  cloudflared
  coreutils
  direnv
  fzf
  gh
  git
  glow
  gnupg
  ifstat
  inxi
  ipcalc
  joplin-cli
  jq
  jqp
  ntp
  hugo
  lego
  mas
  mdv
  minikube
  neofetch
  neovim
  pass
  pyenv
  pillow
  podman
  podman-desktop
  pwgen
  qrencode
  ranger
  rust
  sf-symbols
  shellcheck
  shortcat
  sketchybar
  speedtest-cli
  syncthing
  the_silver_searcher
  terminal-notifier
  terraform
  timg
  wireguard-tools
  wget
)

declare -a PERSONAL_PACKAGES=(
  nicotine-plus
)

declare -a WORK_PACKAGES=(
  heroku
  saml2aws
  session-manager-plugin
)

declare -a CASKS=(
  1password
  balenaetcher
  bartender
  bettertouchtool
  bitwarden
  cleanshot
  dash
  docker
  drawio
  fantastical
  finch
  finicky
  fluid
  flux
  font-anonymous-pro
  font-bitstream-vera-sans-mono-nerd-font
  font-hack-nerd-font
  fork
  freetube
  iina
  istat-menus
  joplin
  keyboardcleantool
  kitty
  meetingbar
  monodraw
  nextcloud
  numi
  obsidian
  orion
  plexamp
  postman
  slack
  tableplus
  textmate
  the-unarchiver
  time-out
  transmit
  vimr 
  vmware-fusion 
)

declare -a CASKS_NO_QUARANTINE=(
  eloston-chromium
  librewolf
  middleclick
  noisy
)

declare -a PERSONAL_CASKS=(
  calibre
  signal
  sonixd
  telegram-desktop
  tor-browser
)

declare -a WORK_CASKS=(
  microsoft-teams
  phantomjs
  tunnelblick
  zoom
)

function install_if_missing {
  if ! echo $VERSIONS | grep $1 > /dev/null ; then brew install $1; fi
}

function install_cask_if_missing {
  if [[ -n "$2" && $2 == "no-quarantine" ]]; then
    if ! echo $CASKS | grep $1 > /dev/null ; then brew install --cask --no-quarantine $1; fi
  else
    if ! echo $CASKS | grep $1 > /dev/null ; then brew install --cask $1; fi
  fi
}

VERSIONS=$(brew ls --versions)

CASKS=$(brew ls --casks)

for i in ${TAPS[@]}; do
  if ! [ -d /usr/local/Homebrew/Library/Taps/$(dirname $i) ]; then brew tap $i; fi
done

for i in ${PACKAGES[@]}; do
  install_if_missing $i
done

for i in ${CASKS[@]}; do
  install_cask_if_missing $i
done

for i in ${CASKS_NO_QUARANTINE[@]}; do
  install_cask_if_missing $i no-quarantine
done

if [ $WORK_MACHINE == "true" ]; then
  for i in ${WORK_PACKAGES[@]}; do
    install_if_missing $i
  done

  for i in ${WORK_CASKS[@]}; do
    install_cask_if_missing $i
  done
else
  for i in ${PERSONAL_PACKAGES[@]}; do
    install_if_missing $i
  done

  for i in ${PERSONAL_CASKS[@]}; do
    install_cask_if_missing $i
  done
fi
