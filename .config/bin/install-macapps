#!/bin/sh

INSTALLED_LIST=$($HOME/bin/mas list)

for i in \
  "1492317385  InstaRemind" \
  "497799835   Xcode" \
  "1451685025  WireGuard" \
  "1289583905  Pixelmator Pro" \
  "937984704   Amphetamine" \
  "451640037  Classic Color Meter" \
  "990588172  Gestimer" \
  "1630860606  Figr: Scientific calculator"
do
  ID=$(echo $i | gcut -d" " -f 1)
  NAME=$(echo $i | gcut -d" " -f 2-)
  INSTALLED=$(echo $INSTALLED_LIST | grep -c $ID)

  if ! [ $INSTALLED == 1 ]; then
    /bin/echo -n "Installing ${NAME}..."

    $HOME/bin/mas install $ID
  fi
done


if [ "$WORK_MACHINE" == "true" ]; then
  for i in \
    "1278508951  Trello" \
    "904280696  Things 3" \
    "1287445660  Agenda"
    do
      ID=$(echo $i | gcut -d" " -f 1)
      NAME=$(echo $i | gcut -d" " -f 2-)
      INSTALLED=$(echo $INSTALLED_LIST | grep -c $ID)

      if ! [ $INSTALLED == 1 ]; then
        /bin/echo -n "Installing ${NAME}..."

        $HOME/bin/mas install $ID
      fi
    done
fi

