#!/bin/sh

source $HOME/.zsh/host

WORK_BROWSER="/Applications/Chromium.app/Contents/MacOS/Chromium"

personal() {
  osascript <<EOF
  tell application "Orion"
     activate
  end tell
EOF
}

if [ $WORK_MACHINE == true -a "$1" == "--invert" ]; then
  personal
elif [ $WORK_MACHINE == true ]; then
  $WORK_BROWSER
elif [ "$1" == "--invert" ]; then
  $WORK_BROWSER
else
  personal
fi

